#include <iostream>
#include <vector>
#include <climits>

using namespace std;

const int INF = INT_MAX;

void bellmanFord(int graph[][4], int V, int E, int source) {
    vector<int> dist(V, INF);
    dist[source] = 0;

    for (int i = 1; i < V; i++) {
        for (int u = 0; u < V; u++) {
            for (int v = 0; v < V; v++) {
                if (graph[u][v] != INF && dist[u] + graph[u][v] < dist[v]) {
                    dist[v] = dist[u] + graph[u][v];
                }
            }
        }
    }

    for (int u = 0; u < V; u++) {
        for (int v = 0; v < V; v++) {
            if (graph[u][v] != INF && dist[u] + graph[u][v] < dist[v]) {
                cout << "Graph contains negative weight cycle!" << endl;
                return;
            }
        }
    }

    cout << "Vertex\tDistance from Source (" << source << ")\n";
    for (int i = 0; i < V; i++) {
        if (dist[i] == INF)
            cout << i << "\t" << "INF" << endl;
        else
            cout << i << "\t" << dist[i] << endl;
    }
}

int main() {
    int V = 4;
    int E = 5;
    
    int graph[4][4] = {
        {0, 5, INF, INF},
        {INF, 0, 2, INF},
        {INF, INF, 0, 1},
        {INF, INF, INF, 0}
    };

    int source = 0;

    bellmanFord(graph, V, E, source);

    return 0;
}
